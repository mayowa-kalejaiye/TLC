# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Site
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# YouTube API (Get from Google Cloud Console)
NEXT_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key_here
NEXT_PUBLIC_YOUTUBE_CHANNEL_ID=your_channel_id_here

# Payment Gateways
PAYSTACK_PUBLIC_KEY=your_paystack_public_key_here
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key_here

# Email Service (Resend, SendGrid, etc.)
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM=noreply@thelightcommunity.org

# WhatsApp
WHATSAPP_NUMBER=your_whatsapp_number_here
